<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tournament_layout_view"
    android:padding="10dp" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colortopbacklightgrey">
                <TextView
                    android:id="@+id/tournaments_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@color/colortopbackground"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"

                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_decription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_winner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_runnerup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"

                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"

                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_playeroftournament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"

                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_mostruns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"

                    android:padding="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tournaments_item_mostwicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:padding="10dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
</LinearLayout>