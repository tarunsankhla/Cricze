<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colortopbacklightgrey"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/results_list_date"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:padding="7dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/results_list_team1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/results_list_team2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/results_list_team_winner"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:background="@color/colorback1"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>